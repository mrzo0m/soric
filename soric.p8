-- soric man
#include logger.lua
#include component.lua
#include keyboardcomponent.lua
#include entity.lua
#include player.lua
#include system.lua
soric_sp=1
soric_flip=false
soric_anim_time=0
debug=true

logger = getlogger()

component = getcomponent()
keyboard_cmp = getkeyboardcomponent()
entity = getentity()
player = getplayer()
system = getsystem()

function _init()
	


end

function _update()

 local cur_time = time()
 
 if cur_time - soric_anim_time > 0.2 then
			soric_anim_time = time()

		 if btn(⬇️) then 
		  soric_flip=true 
		 end
		 
		 if btn(❎) then
		  soric_sp= soric_sp + 2
		 end
		 if soric_sp > 9 then
		  soric_sp=1
		 end
		 	
	
 end
 
 
end

function _draw()
  cls()
  spr(soric_sp,56,56,2,2,true)
 

 local c = keyboard_cmp()

 
 local pl = player(2)

 pl:add(c)

 local s = system("move")
 
 s:register_entity(pl)
 
 s:get_entity(pl:get_type())


end


